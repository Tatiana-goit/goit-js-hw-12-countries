<h1 class="country__name">
  {{name}}
</h1>
<div class="country__discrubtion">
  <div class="country__information">
    <ul class="country__list">
      <li class="country__item">
       <b>Capital: </b>{{capital}}
      </li>
      <li class="country__item">
        <b>Population:</b> {{population}}
      </li>
      <li class="country__item">
        <b>Languages:</b>
        <ul class="language__list">
          {{#each languages}}
            <li class="language__item">
              <p class="language__name">
                {{name}}
              </p>
            </li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </div>
  
  <img  src="{{flag}}" class="country__flag" alt="{{name}}" width='300' />
</div>